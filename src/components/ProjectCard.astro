---
import { Image } from "astro:assets";
import type { CollectionEntry } from 'astro:content';
import NavIcon from "./NavIcon.astro";
import { getLangFromUrl, useTranslatedPath, type Lang } from "@/i18n/utils";
import { DEFAULT_COVER_PATH, getSlugById, sanitizeSlug } from "@/utils/getPosts";

interface Props {
  project: CollectionEntry<'project'>
}

const { project } = Astro.props
const { cover, icon, title, description, github, homepage, liveDemo, tags } = project.data;

const lang = getLangFromUrl(Astro.url);

const translatePath = useTranslatedPath(lang)

const projectSlug = getSlugById(project.id)
const cardTransitionName = `project-card-${lang}-${sanitizeSlug(projectSlug)}`
const titleTransitionName = `project-title-${lang}-${sanitizeSlug(projectSlug)}`
const coverTransitionName = `project-cover-${lang}-${sanitizeSlug(projectSlug)}`

const hasCustomCover = cover !== undefined
const coverImage = cover ?? DEFAULT_COVER_PATH
---

<div class="group relative rounded-xl border overflow-clip" transition:name={cardTransitionName}>
  <div class="relative h-full flex flex-col z-10">
    <div class="max-h-54 overflow-hidden">
      <Image
        src={coverImage}
        alt={title}
        width={720}
        height={480}
        class="max-h-54 w-full rounded-t-xl object-cover group-hover:scale-103 transition-transform duration-400 will-change-transform"
        transition:name={coverTransitionName}
      />
    </div>
    <div class="flex flex-col flex-1 gap-4 px-6 py-4">
      <div class="flex gap-4 items-center">
        <div class="w-12 h-12 shrink-0 rounded-lg overflow-clip">
          <Image src={icon} alt={title} />
        </div>
        <div class="flex flex-col justify-center md:gap-1">
          <h2 class="font-semibold text-lg md:text-2xl">
            <a href={translatePath(`/projects/${projectSlug}`)} class="before:absolute before:inset-0">
              <span transition:name={titleTransitionName}>{title}</span>
            </a>
          </h2>
          <p class="text-sm text-muted-foreground">{description}</p>
        </div>
      </div>
      <div aria-label="footer" class="flex items-center mt-auto">
        {tags && tags.length > 0 && (
          <div aria-label="project tags">
            <ul>
              {tags.map((tag: string) => (
                <li class="inline-flex items-center justify-center rounded-md border px-2 py-0.5 text-xs font-medium w-fit whitespace-nowrap shrink-0 [&>svg]:size-3 gap-1 [&>svg]:pointer-events-none focus-visible:border-ring focus-visible:ring-ring/50 focus-visible:ring-[3px] aria-invalid:ring-destructive/20 dark:aria-invalid:ring-destructive/40 aria-invalid:border-destructive transition-[color,box-shadow] overflow-hidden text-foreground [a&]:hover:bg-accent [a&]:hover:text-accent-foreground">
                  <span>{tag}</span>
                </li>
              ))}
            </ul>
          </div>
        )}
        <div aria-label="project links" class="ml-auto inline gap-0.5 z-10">
          {github && <NavIcon name="GitHub Repository" href={github} icon="ri:github-fill" size="md" external />}
          {homepage && <NavIcon name="Project Homepage" href={homepage} icon="ri:home-4-line" size="md" external />}
          {liveDemo && <NavIcon name="Project Live Demo" href={liveDemo} icon="ri:global-line" size="md" external />}
        </div>
      </div>
    </div>
  </div>
</div>
