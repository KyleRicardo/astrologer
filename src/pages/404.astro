---
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="404 Not Found">
  <main class="flex flex-1 flex-col justify-center items-center gap-8 tracking-wide">
    <h1 class="font-bold text-8xl text-muted-foreground">404</h1>
    <p class="text-center">页面未找到</p>
    <a href="/" class="flex items-center gap-2 hover:text-muted-foreground">
      <Icon name="ri:arrow-left-line" />
      返回首页
    </a>
  </main>
</Layout>
